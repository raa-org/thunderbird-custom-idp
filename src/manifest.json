{
  "manifest_version": 2,
  "name": "Thunderbird Custom IdP (OIDC/OAuth2)",
  "version": "2.0.0",
  "description": "Adds a configurable OAuth2/OIDC Identity Provider for IMAP/SMTP in Thunderbird.",
  "applications": {
    "gecko": {
      "id": "test@mail.com",
      "strict_min_version": "115.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "accountsRead",
    "storage",
    "<all_urls>"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "experiment_apis": {
    "oauthpatch": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "implementation.js",
        "paths": [["oauthpatch"]]
      }
    }
  },
  "oauthpatch": {
    "configUrl": "https://placeholder.json"
  }
}
